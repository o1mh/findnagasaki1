<h1>(Nagasaki)</h1>
<h3>Post詳細</h3>
<div class="post">
  <p><%= @post.place %></p>
  <p><%= @post.created_at %></p>
  <% if user_signed_in? %>
  <% if current_user.already_liked?(@post) %>
    <%= link_to tweet_path(@post), method: :delete do %>
      <i class="fas fa-heart fa-2x" style="color:#db7093"></i><%= @post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(@post), method: :post do %>
      <i class="far fa-heart fa-2x" style="color:#db7093"></i><%= @post.likes.count %>
    <% end %>
  <% end %>
<% else %>
<i class="far fa-heart fa-2x" style="color:#db7093"></i><%= @post.likes.count %>
<% end %>
<%= link_to "編集する", edit_post_path(@post.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
<%= link_to "Post一覧に戻る", posts_path %>
